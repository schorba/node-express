<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}
            <h1>Login </h1>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Type Email"></span>
                </div>

                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Type Password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <p><a href="/auth/reset">Reset Password</a></p>
                <button class="btn btn-primary" type="submit">Login</button>
            </form>

        </div>
        <div id="register" class="col s6 offset-s3">
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
            <h1>Register</h1>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input id="remail" name="email" type="text" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Type Email"></span>
                </div>

                <div class="input-field">
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Type Name"></span>
                </div>

                <div class="input-field">
                    <input id="rpassword" name="password" type="password" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Type Password"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" name="confirm" type="password" class="validate" required>
                    <label for="confirm">Password Confirmation</label>
                    <span class="helper-text" data-error="Type Password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">
                
                <button class="btn btn-primary" type="submit">Register</button>
            </form>

        </div>
    </div>
</div>